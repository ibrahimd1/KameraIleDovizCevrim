<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background">

    <include layout="@layout/header"></include>

    <Spinner
        android:id="@+id/spinnerManuelKaynak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:layout_marginRight="250dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/custom_spinner" />

    <EditText
        android:id="@+id/edtManuelHedefText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinnerManuelKaynak"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:ems="10"
        android:inputType="numberDecimal"
        />

    <Spinner
        android:id="@+id/spinnerManuelHedef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinnerManuelKaynak"
        android:layout_alignLeft="@+id/spinnerManuelKaynak"
        android:layout_alignRight="@+id/spinnerManuelKaynak"
        android:layout_alignStart="@+id/spinnerManuelKaynak"
        android:layout_below="@+id/edtManuelHedefText"
        android:layout_marginTop="31dp"
        android:background="@drawable/custom_spinner"/>

    <EditText
        android:id="@+id/edtManuelKaynakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinnerManuelHedef"
        android:layout_alignLeft="@+id/edtManuelHedefText"
        android:layout_alignStart="@+id/edtManuelHedefText"
        android:ems="10"
        android:inputType="numberDecimal" />
</RelativeLayout>